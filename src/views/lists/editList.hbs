{{#each erros}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{texto}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}


<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>Editar</h3>
    </div>
    <div class="card-body">
        
    </div>
       <form action="/lists/editList" method="POST">
          <input type="hidden" name="id" value="{{lista._id}}">
          <div class="form-group">
              <input type="text" name="titulo" class="form-control" placeholder="Titulo" autofocus
              value='{{lista.titulo}}'>

          </div>
          <div class="form-group">
              <textarea name="descricao" id="" cols="30" rows="3" class="form-control" placeholder="Descricao">
                  {{lista.descricao}}
              </textarea>
          </div>
          <div class="form-group">
              <button class="btn btn-primary btn-block" type="submit">
                  Salvar
              </button>
          </div>
       </form>
    </div>
</div>